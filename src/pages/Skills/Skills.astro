---
import PythonIcon from "../../assets/python.svg";
import JavaScriptIcon from "../../assets/javascript.svg";
import HTMLIcon from "../../assets/html.svg";
import CSSIcon from "../../assets/css.svg";
import ReactIcon from "../../assets/react.svg";
import ViteIcon from "../../assets/vite.svg";
import TypeScriptIcon from "../../assets/typescript.svg";
import CppIcon from "../../assets/cpp.svg";
import PHPIcon from "../../assets/php.svg";
import NodeIcon from "../../assets/nodejs.svg";
import FlaskIcon from "../../assets/flask.svg";
import TailwindIcon from "../../assets/tailwind.svg";
import JavaIcon from "../../assets/java.svg";

const skills = [
  { name: "Python", icon: PythonIcon.src },
  { name: "JavaScript", icon: JavaScriptIcon.src },
  { name: "TypeScript", icon: TypeScriptIcon.src },
  { name: "HTML", icon: HTMLIcon.src },
  { name: "CSS", icon: CSSIcon.src },
  { name: "React", icon: ReactIcon.src },
  { name: "Vite", icon: ViteIcon.src },
  { name: "C++", icon: CppIcon.src },
  { name: "PHP", icon: PHPIcon.src },
  { name: "Node.js", icon: NodeIcon.src },
  { name: "Flask", icon: FlaskIcon.src },
  { name: "Tailwind CSS", icon: TailwindIcon.src },
  { name: "Java", icon: JavaIcon.src },
];

const allSkills = [...skills, ...skills];
---

<div class="relative">
  <div class="block md:hidden mb-2 text-center">
    <span
      class="whitespace-nowrap text-gray-500 text-md font-bold tracking-wider"
    >
      TECH SKILLS
    </span>
  </div>
  <div
    class="hidden md:block absolute -left-10 top-1/2 transform -translate-y-1/2 -rotate-90 origin-center"
  >
    <span
      class="whitespace-nowrap text-gray-500 text-md font-bold tracking-wider"
    >
      TECH SKILLS
    </span>
  </div>
  <div
    class="overflow-hidden m-0 bg-[#1c1c25] rounded-xl shadow-lg hover:border hover:border-gray-200 hover:bg-[#2a2a30] transition-all duration-300 ease-in-out ml-0 md:ml-6"
  >
    <div class="skills-container relative py-4">
      <div class="skills-track flex items-center">
        {
          allSkills.map((skill) => (
            <div class="skill-item flex flex-col items-center mx-8">
              <div class="icon-container w-12 h-12 mb-1 flex items-center justify-center overflow-hidden">
                <img
                  src={skill.icon}
                  alt={`${skill.name} logo`}
                  class="w-full h-full object-contain"
                />
              </div>
              <span class="text-[#fff5ee] text-sm">{skill.name}</span>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</div>

<style>
  .skills-container {
    overflow: hidden;
    position: relative;
  }

  .skills-track {
    animation: scrollSkills 30s linear infinite;
    width: max-content;
  }

  .skill-item {
    transition: transform 0.3s ease;
    flex-shrink: 0;
  }

  .skill-item:hover {
    transform: translateY(-8px);
  }

  .icon-container img {
    max-width: 48px !important;
    max-height: 48px !important;
    width: auto !important;
    height: auto !important;
  }

  .icon-container {
    min-width: 48px;
    min-height: 48px;
  }

  /* Gradient masks for desktop only */
  .skills-container::before,
  .skills-container::after {
    content: "";
    position: absolute;
    top: 0;
    height: 100%;
    width: 120px;
    z-index: 2;
    pointer-events: none;
  }

  .skills-container::before {
    left: 0;
    background: linear-gradient(
      to right,
      rgba(28, 28, 37, 1) 0%,
      rgba(28, 28, 37, 0.8) 50%,
      rgba(28, 28, 37, 0) 100%
    );
  }

  .skills-container::after {
    right: 0;
    background: linear-gradient(
      to left,
      rgba(28, 28, 37, 1) 0%,
      rgba(28, 28, 37, 0.8) 50%,
      rgba(28, 28, 37, 0) 100%
    );
  }

  @media (max-width: 768px) {
    .skills-container::before,
    .skills-container::after {
      display: none;
    }

    .skill-item {
      margin-left: 1.5rem;
      margin-right: 1.5rem;
    }
  }

  @keyframes scrollSkills {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(calc(-50% - 1rem));
    }
  }
</style>
