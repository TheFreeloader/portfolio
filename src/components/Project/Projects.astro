---
import styles from "./Projects.module.css";
import Card from "../Card/Card.astro";
import ProjectIcon from "../../assets/project.svg";
const cardId = "projects";
---

<div>
  <div class={styles.card_wrapper} id="projectsCard">
    <Card title="Projects" icon={ProjectIcon.src} cardId={cardId} />
  </div>
  <div class={styles.modal_container} id="projectModalOverlay">
    <div class={styles.modal_content} id="projectsContainer">
      <div class={styles.modal_header} id="projectModalHeader"></div>
      <div class={styles.close_button_container}>
        <span class={styles.close_button} id="projectCloseModal">&times;</span>
      </div>
      <div class={styles.modal_body}>
        <h2 class={styles.projects_title}>My Projects</h2>

        <div class={styles.project_item}>
          <h3>Project 1</h3>
          <p class={styles.project_description}>
            A description of your first project. Include technologies used and
            the purpose of the project.
          </p>
          <div class={styles.project_links}>
            <a href="#" target="_blank">View Demo</a>
            <a href="#" target="_blank">GitHub</a>
          </div>
        </div>

        <div class={styles.project_item}>
          <h3>Project 2</h3>
          <p class={styles.project_description}>
            A description of your second project. Include technologies used and
            the purpose of the project.
          </p>
          <div class={styles.project_links}>
            <a href="#" target="_blank">View Demo</a>
            <a href="#" target="_blank">GitHub</a>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script>
    import { initializeProjects } from "./projectHandler.ts";
    const cardId = "projects";
    initializeProjects(cardId);
  </script>
</div>
