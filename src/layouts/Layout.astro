---
import "../styles/global.css";
import DottedBG from "../assets/dotted_bg.svg";
---

<!doctype html>
<html lang="en">
  <head>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
      rel="stylesheet"
    />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/cat.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Portfolio-CJN</title>
  </head>
  <body
    class="m-0 p-0 bg-[#000000] h-screen flex relative"
    style={`background-image: url(${DottedBG.src}); background-repeat: repeat; background-size: 160px; `}
  >
    <!-- Custom dark bluish overlay with blur -->
    <div
      class="fixed inset-0 pointer-events-none z-0 backdrop-blur-xs opacity-90"
      style="background-color: rgba(18, 30, 48, 0.418);"
    >
    </div>

    <div
      class="flex flex-col justify-center items-center w-full h-full relative z-10"
    >
      <slot />
    </div>
  </body>
</html>
